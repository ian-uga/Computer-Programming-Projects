#8-14. Cars
def make_car(manufacturer, model, **options):
    car = {"manufacturer": manufacturer, "model": model}
    for key, value in options.items():
        car[key] = value
    return car

car = make_car("ford", "focus", color="white", tow_package=True)
print(car)
{'manufacturer': 'ford', 'model': 'focus', 'color': 'white', 'tow_package': True}
