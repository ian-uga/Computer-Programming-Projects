#9-3. Users
class User:
    def __init__(self, first, last, age, city, email, username):
        self.first_name = first
        self.last_name = last
        self.age = age
        self.city = city
        self.email = email
        self.username = username

    def describe_user(self):
        print(f"{self.first_name} {self.last_name}, {self.age}, from {self.city}, email: {self.email}, username: {self.username}")

    def greet_user(self):
        print(f"Welcome back, {self.first_name}!")

user1 = User("Ian", "Arnold", 23, "Athens", "ian@example.com", "ian22")
user2 = User("John", "Mauro", 21, "Savannah", "john@example.com", "john21")
user3 = User("Chris", "Kazunas", 21, "Medford", "chris@example.com", "chris21")

user1.describe_user()
user1.greet_user()

user2.describe_user()
user2.greet_user()

user3.describe_user()
user3.greet_user()
Ian Arnold, 23, from Athens, email: ian@example.com, username: ian22
Welcome back, Ian!
John Mauro, 21, from Savannah, email: john@example.com, username: john21
Welcome back, John!
Chris Kazunas, 21, from Medford, email: chris@example.com, username: chris21
Welcome back, Chris!
